{
  // Optimized for Bun with native TypeScript support
  "compilerOptions": {
    // Module Settings
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["bun-types"],

    // Module Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Type Checking - Helpful but not annoying
    "strict": true,
    "strictNullChecks": false,

    // Other Options
    "skipLibCheck": true,
    "moduleDetection": "force"
  }
}
